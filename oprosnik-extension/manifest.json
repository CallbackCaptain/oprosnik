{
  "manifest_version": 3,
  "name": "Page Helper",
  "version": "3.0",
  "description": "RTK Oprosnik Extension",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://ctp.rt.ru/*",
    "https://ssial000ap008.si.rt.ru:8445/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://ctp.rt.ru/*"],
      "js": ["content.js"]

    },
    {
      "matches": ["https://ssial000ap008.si.rt.ru:8445/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}