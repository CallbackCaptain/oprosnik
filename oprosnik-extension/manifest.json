{
  "manifest_version": 3,
  "name": "Oprosnik Helper",
  "version": "5.1.0",
  "description": "Помогает с заполнением опросника, копирует данные из Finesse.",
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://ctp.rt.ru/*",
    "https://ssial000ap008.si.rt.ru:8445/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://ctp.rt.ru/quiz*"],
      "js": ["config.js", "scripts/survey-page.js"],
      "css": ["css/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://ssial000ap008.si.rt.ru:8445/desktop/container/*"],
      "js": ["config.js", "scripts/finesse-page.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["config.js"],
      "matches": ["https://ctp.rt.ru/*", "https://ssial000ap008.si.rt.ru:8445/*"]
    }
  ]
}
