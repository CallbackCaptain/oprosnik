{
  "manifest_version": 3,
  "name": "Oprosnik Helper",
  "version": "3.0",
  "description": "Помогает с заполнением опросника, копирует данные из файнес.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://ctp.rt.ru/*",
    "https://ssial000ap008.si.rt.ru:8445/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://ctp.rt.ru/quiz*"],
      "js": ["scripts/filler.js"],
      "css": ["css/style.css"]
    },
    {
      "matches": ["https://ssial000ap008.si.rt.ru:8445/desktop/container/?locale=ru_RU*"],
      "js": ["scripts/parser.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
